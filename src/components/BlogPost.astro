---
const { url, title, date, slug } = Astro.props;
const formattedDate = new Date(date).toLocaleDateString("en-CA");
// 使用 slug 或默认 URL
const postUrl = slug ? `/posts/${slug}` : url;
---

<div
  class="text-xl font-semibold flex space-x-8 justify-between no-underline mb-4"
>
  <a href={postUrl} class="no-underline cursor-pointer">
    <span
      class="font-serif text-gray-800 dark:text-gray-200 transition-colors duration-200 hover:text-blue-500 dark:hover:text-blue-400"
      >{title}</span
    >
  </a>
  <span class="font-mono text-gray-500 dark:text-gray-400">{formattedDate}</span>
</div>
